<%= form_with(model: food) do |form| %>
  <div class='form-control'>
    <%= form.text_field :name, placeholder: 'Name' %>
  </div>
  <div class='form-control'>
    <%= form.text_field :measurement_unit, placeholder: 'Measurement Unit' %>
  </div>
  <div class='form-control'>
    <%= form.text_field :price, placeholder: 'Price' %>
  </div>
  <div>
    <%= form.submit "Add Recipe", class: 'button' %>
  </div>
<% end %>